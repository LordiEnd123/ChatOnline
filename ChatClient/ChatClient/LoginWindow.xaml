<Window x:Class="ChatClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в чат" Height="260" Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Loaded="LoginWindow_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Email -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Width="220"/>
        </StackPanel>

        <!-- Пароль -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Width="220"/>
        </StackPanel>

        <!-- Кнопки Войти / Регистрация -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Войти"
                    Width="100"
                    Click="LoginButton_Click"/>
            <Button Content="Регистрация"
                    Width="120"
                    Margin="10,0,0,0"
                    Click="RegisterButton_Click"/>
        </StackPanel>

        <!-- Статус и восстановление -->
        <StackPanel Grid.Row="3">
            <Button Content="Забыли пароль?"
                    HorizontalAlignment="Left"
                    Click="RestoreButton_Click"/>

            <TextBlock x:Name="StatusTextBlock"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
