<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Онлайн чат" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верх: имя пользователя -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="Имя:" VerticalAlignment="Center"/>
            <TextBox x:Name="UserNameTextBox"
                     Width="150"
                     Margin="5,0,10,0"
                     Text="User1" />

            <TextBlock Text="Статус:" VerticalAlignment="Center"/>
            <TextBlock x:Name="ConnectionStatusTextBlock"
                       Text="Отключено"
                       Foreground="Red"
                       FontWeight="Bold"
                       Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Список сообщений -->
        <ListBox x:Name="MessagesListBox" Grid.Row="1"/>

        <!-- Ввод сообщения -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5,0,0">
            <TextBox x:Name="MessageTextBox"
                     Width="600"
                     Height="30"
                     VerticalAlignment="Center"
                     KeyDown="MessageTextBox_KeyDown"
                     Margin="0,0,5,0"/>
            <Button Content="Отправить"
                    Width="100"
                    Height="30"
                    Click="SendButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
