<Window x:Class="ChatClient.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль пользователя"
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <ScrollViewer Margin="10">
        <StackPanel>

            <!-- Email (текущее) -->
            <TextBlock Text="Текущий email:" FontWeight="Bold"/>
            <TextBlock x:Name="EmailTextBlock" Margin="0,0,0,10"/>

            <!-- Имя -->
            <TextBlock Text="Имя пользователя:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <!-- Аватар (URL) -->
            <TextBlock Text="Avatar URL:"/>
            <TextBox x:Name="AvatarTextBox" Margin="0,0,0,5"/>
            <Image x:Name="AvatarImage"
                   Height="80"
                   Width="80"
                   Margin="0,0,0,10"
                   Stretch="UniformToFill"/>

            <!-- Статус -->
            <TextBlock Text="Статус:"/>
            <ComboBox x:Name="StatusComboBox"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="Offline"/>
                <ComboBoxItem Content="Online"/>
                <ComboBoxItem Content="DoNotDisturb"/>
            </ComboBox>

            <!-- Описание / био -->
            <TextBlock Text="Описание / био:"/>
            <TextBox x:Name="BioTextBox"
                     Margin="0,0,0,10"
                     AcceptsReturn="True"
                     Height="60"/>

            <!-- Настройки уведомлений -->
            <TextBlock Text="Уведомления:" FontWeight="Bold"/>
            <CheckBox x:Name="NotificationsEnabledCheckBox"
                      Content="Включить уведомления" IsChecked="True"/>
            <CheckBox x:Name="SoundEnabledCheckBox"
                      Content="Звук"/>
            <CheckBox x:Name="BannerEnabledCheckBox"
                      Content="Баннер"/>

            <Separator Margin="0,10,0,10"/>

            <!-- Смена email -->
            <TextBlock Text="Смена email:" FontWeight="Bold"/>
            <TextBox x:Name="NewEmailTextBox" Margin="0,0,0,5"/>
            <Button Content="Изменить email"
                    Click="ChangeEmailButton_Click"
                    Margin="0,0,0,10"
                    Width="150"/>

            <!-- Смена пароля -->
            <TextBlock Text="Смена пароля:" FontWeight="Bold"/>
            <PasswordBox x:Name="OldPasswordBox" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,5"/>
            <Button Content="Изменить пароль"
                    Click="ChangePasswordButton_Click"
                    Margin="0,0,0,10"
                    Width="150"/>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Сохранить профиль"
                        Click="SaveProfileButton_Click"
                        Width="150"/>
                <Button Content="Закрыть"
                        Click="CloseButton_Click"
                        Margin="10,0,0,0"
                        Width="100"/>
            </StackPanel>

            <TextBlock x:Name="StatusTextBlock"
                       Margin="0,10,0,0"
                       Foreground="Red"
                       TextWrapping="Wrap"/>

        </StackPanel>
    </ScrollViewer>
</Window>